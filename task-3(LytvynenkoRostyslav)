using System;
namespace task-3(LytvynenkoRostyslav)

    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Введiдь значення a");
            double a = Convert.ToDouble(Console.ReadLine());
            Console.WriteLine("Введiдь значення висоти");
            double h = Convert.ToDouble(Console.ReadLine());
            Console.WriteLine($"Площа S трикутника = {0.5 * a * h}"); 
        }
    }
